ss()
	display: block;
	position: relative;
	margin: 16px 0;
	padding: 0;
	word-break: break-word;
	color: #806358;
	font-size: 1em;
	font-family: 'Proxima Nova Reg', "FOT-スーラ Pro M", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', sans-serif;
	border: solid 1px #cad2d6;
	border-radius: 5px;
	background: #fff;
	overflow: hidden;

	&:hover
		> header > .title > .favorite
			display: inline-block;

		> header > .actions
			display: block;

	&[data-is-favorited='false']
		> header
			> .title
				> .favorite
					color: #888;

					&:hover
						color: #777;

					&:active
						color: #666;

					&:disabled
						opacity: 0.7;

	&[data-is-favorited='true']
		> header
			> .title
				> .favorite
					color: #FF1358;

					&:hover
						color: #FF3E77;

					&:active
						color: #E60949;

					&:disabled
						opacity: 0.7;

	> header
		margin: 0;
		padding: 0;
		border-bottom: solid 1px #e1e8ed;

		> .title
			display: block;
			margin: 0;
			padding: 0 16px;
			height: 46px;
			line-height: 46px;
			font-size: 1em;
			font-weight: normal;
			background: #fdfdfd;
			border-bottom: solid 1px #e1e8ed;

			a
				display: inline-block;
				max-width: calc(100% - 64px);
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				color: #66757f;

				h1
					display: inline;
					margin: 0;
					font-weight: normal;
					font-size: 1em;

				.posts
					opacity: 0.5;
					font-weight: normal;
					font-size: 0.7em;
					line-height: 0;

			.favorite
				display: none;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				margin: 0 0 0 4px;
				vertical-align: 100%;
				font-size: 1em;
				border: none;
				background: transparent;
				box-shadow: none;
				transition: color 0.2s ease;
				cursor: pointer;

		> .info
			position: relative;
			padding: 2px 16px;
			color: #a7aeb3;
			font-size: 0.8em;

			> .series
				display: inline;
				margin: 0 8px 0 0;

				> .caption
					display: inline;
					margin: 0;

				> .unknown
				> .title
					margin: 0 4px;

			> .characters
				display: inline;

				> .caption
					display: inline;
					margin: 0;

				ul
					display: inline;
					margin: 0;
					padding: 0;
					list-style: none;

					li
						display: inline;
						margin: 0 4px;

			> .characters-ratio
				display: block;
				position: absolute;
				top: -1px;
				left: 0;
				overflow: hidden;
				white-space: nowrap;
				width: 100%;
				font-size: 0;
				background: #fff;

				> span
					display: inline-block;
					vertical-align: top;
					height: 1px;

		> .actions
			display: none;
			position: absolute;
			top: 6px;
			right: 6px;

			> button
				display: block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				margin: 0;
				padding: 0;
				width: 34px;
				height: 34px;
				font-size: 1.1em;
				line-height: 32px;
				border: 1px solid rgba(0, 0, 0, 0.1);
				border-radius: 2px;
				background-color: #f5f5f5;
				background-image: -webkit-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -moz-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -ms-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -o-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: linear-gradient(top, #f5f5f5, #f1f1f1);
				box-shadow: none;
				color: #666;
				cursor: pointer;

				&:hover
					background-color: #f8f8f8;
					background-image: -webkit-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -moz-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -ms-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -o-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: linear-gradient(top, #f8f8f8, #f1f1f1);
					border: 1px solid #c6c6c6;
					color: #555;

				&:active
					box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
					background: #f8f8f8;
					color: #444;

				&:disabled
					cursor: default;

				&.wait
					cursor: wait;
					opacity: 0.7;

	> .body
		> .text
			display: block;
			position: relative;
			padding: 1em 1em 0 1em;
			min-height: 4em;
			max-height: 10em;
			overflow: hidden;
			color: #806358;

			b
				font-weight: normal;

			&:after
				content: "";
				pointer-events: none;
				display: block;
				position: absolute;
				bottom: 0;
				width: 100%;
				height: 32px;
				background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 100%);
				background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 100%);
				background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, #fff 100%);

	> footer
		padding: 0 16px;
		border-top: solid 1px #e1e8ed;

		> .more
			line-height: 40px;

			i
				margin-left: 4px;

		> .status
			position: absolute;
			bottom: 0;
			right: 0;
			color: #AAB8C2;

			> p
				display: inline-block;
				line-height: 40px;
				margin: 0;
				padding: 0 16px;
				border-left: solid 1px #e1e8ed;

				.count
					font-size: 0.9em;

				i
					margin-right: 6px;
