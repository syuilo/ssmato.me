ss()
	display: block;
	position: relative;
	margin: 0 0 10px 0;
	padding: 22px 28px;
	word-break: break-word;
	color: #806358;
	font-size: 1em;
	font-family: 'Proxima Nova Reg', "FOT-スーラ Pro M", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', sans-serif;
	border: solid 1px #ddd;
	border-radius: 4px;

	&:last-child
		margin-bottom: 0;

	&:hover
		> header > .actions
			display: block;

	&[data-is-favorited='false']
		> footer
			> .favorites
				button
					color: #888;

					&:hover
						color: #777;

					&:active
						color: #666;

					&:disabled
						opacity: 0.7;

	&[data-is-favorited='true']
		> footer
			> .favorites
				button
					color: #FF1358;

					&:hover
						color: #FF3E77;

					&:active
						color: #E60949;

					&:disabled
						opacity: 0.7;

	> header
		margin: 0 0 16px 0;
		padding: 0 0 8px 0;
		//border-bottom: solid 1px #F1E6E6;

		> h1
			display: block;
			margin: 0;
			font-size: 1.2em;
			font-weight: bold;

			.posts
				opacity: 0.7;
				font-weight: normal;

		> .series
			display: inline;
			margin: 0 8px 0 0;
			font-size: 0.9em;

			> .caption
				display: inline;
				margin: 0;

			> .unknown
			> .title
				margin: 0 4px;

		> .characters
			display: inline;
			font-size: 0.9em;

			> .caption
				display: inline;
				margin: 0;

			ul
				display: inline;
				margin: 0;
				padding: 0;
				list-style: none;

				li
					display: inline;
					margin: 0 4px;

		> .actions
			display: none;
			position: absolute;
			top: 20px;
			right: 20px;

			> button
				display: block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				margin: 0;
				padding: 0;
				width: 34px;
				height: 34px;
				font-size: 1.1em;
				line-height: 32px;
				border: 1px solid rgba(0, 0, 0, 0.1);
				border-radius: 2px;
				background-color: #f5f5f5;
				background-image: -webkit-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -moz-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -ms-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: -o-linear-gradient(top, #f5f5f5, #f1f1f1);
				background-image: linear-gradient(top, #f5f5f5, #f1f1f1);
				box-shadow: none;
				color: #666;
				cursor: pointer;

				&:hover
					background-color: #f8f8f8;
					background-image: -webkit-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -moz-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -ms-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: -o-linear-gradient(top, #f8f8f8, #f1f1f1);
					background-image: linear-gradient(top, #f8f8f8, #f1f1f1);
					border: 1px solid #c6c6c6;
					color: #555;

				&:active
					box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
					background: #f8f8f8;
					color: #444;

				&:disabled
					cursor: default;

				&.wait
					cursor: wait;
					opacity: 0.7;

	> .body
		> .text
			display: block;
			position: relative;
			padding: 0 1em;
			min-height: 4em;
			max-height: 10em;
			overflow: hidden;
			color: #806358;

			&:after
				content: "";
				pointer-events: none;
				display: block;
				position: absolute;
				bottom: 0;
				width: 100%;
				height: 32px;
				background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 100%);
				background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 100%);
				background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, #fff 100%);

	> footer
		position: absolute;
		bottom: 16px;
		right: 16px;
		color: #bbb;

		> p
			display: inline-block;
			margin: 0 16px;

			.count
				font-size: 0.9em;

			i
				margin-right: 6px;

			button
				display: inline-block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				font-size: 1.1em;
				border: none;
				background: transparent;
				box-shadow: none;
				transition: color 0.2s ease;
				cursor: pointer;

				i
					margin: 0;
