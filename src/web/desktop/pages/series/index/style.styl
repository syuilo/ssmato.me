@import '../../../ui'
@import '../../../common/ss-preview'

#profile
	background: #F5F8FA;

	> .container
		display: block;
		box-sizing: border-box;
		width: 100%;
		max-width: 1024px;
		padding: 32px;
		margin: 0 auto;

		&:after
			content: "";
			display: block;
			clear: both;

		> img
			display: block;
			float: left;
			max-width: 256px;
			max-height: 256px;

		> .main
			box-sizing: border-box;
			float: left;
			width: calc(100% - 256px);
			padding: 0 32px;

			> header
				margin-bottom: 16px;

				> h1
					display: block;
					margin: 0;
					font-size: 2em;
					font-weight: normal;
					color: #66757f;

					> ruby
						> rt
							font-size: 30%;

			> .body
				color: #66757f;

#characters
	> .container
		display: block;
		box-sizing: border-box;
		width: 100%;
		max-width: 1088px;
		padding: 32px;
		margin: 0 auto;

		> ul
			display: -webkit-flex;
			display: -moz-flex;
			display: -ms-flex;
			display: -o-flex;
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			margin: 0;
			padding: 0;
			list-style: none;

			> li
				display: block;
				flex: 1 1 256px;

				> a
					display: block;

					&:hover > div
						background: #f8fbfd;

					&:active > div
						background: #edf0f3;

					> div
						padding: 16px;
						pointer-events: none;

						&:after
							content: "";
							display: block;
							clear: both;

						> img
							display: block;
							width: 64px;
							float: left;

						> p
							display: block;
							box-sizing: border-box;
							float: left;
							margin: 0;
							padding: 0 0 0 16px;
							width: calc(100% - 64px);
							line-height: 64px;
							overflow: hidden;
							white-space: nowrap;
							word-wrap: break-word;
							word-break: break-all;
							text-overflow: ellipsis;

