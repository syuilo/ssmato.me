extend ../../../../common

block title
	| SSまとめ検索

block meta
	- var summary = 'SSまとめ検索で、お気に入りのSSを見つけよう';
	meta(name='keywords', content='SS, SSまとめ, SS検索')
	meta(name='description', content= summary)
	meta(property='og:title', content='SSまとめ検索')
	meta(property='og:type', content='article')
	meta(property='og:description', content= summary)
	meta(property='og:url', content= config.url)
	meta(property='og:image', content= config.urls.resources + '/logo.png')
	meta(property='og:site_name', content='SSまとめ')
	meta(property='twitter:card', content='summary')
	meta(property='twitter:site', content='@syuilo')
	meta(property='twitter:title', content='SSまとめ検索')
	meta(property='twitter:description', content= summary)
	meta(property='twitter:image', content= config.urls.resources + '/logo.png')
	meta(property='twitter:url', content= config.url)

block body
	main
		img(src= config.urls.resources + '/search.png', alt='SSの検索', role="banner")
		form#search(action= config.urls.search, method='get', role='search')
			div#textarea
				input#input(type='search', name='q', placeholder='キーワードを入力', title='検索', autofocus, required)
				i.fa.fa-search
			div#buttons
				button(type='submit') 検索！
				button(type='submit', name='imfeelinglucky') I'm Feeling Lucky
		div.ad.
			<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<!-- search-top -->
			<ins class="adsbygoogle"
			style="display:inline-block;width:468px;height:15px"
			data-ad-client="ca-pub-3738125028983387"
			data-ad-slot="9195067351"></ins>
			<script>
			(adsbygoogle = window.adsbygoogle || []).push({});
			</script>
	footer
		include ../../../../copyright
