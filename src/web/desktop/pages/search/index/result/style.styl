@import '../../../../../common'
@import '../../../../common/ss-preview'

html
	background: #fff;

body > header
	display: block;
	padding: 12px 0;
	background: #F7F7F7;
	border-bottom: solid 1px #eee;

	#search
		display: block;
		width: 100%;
		max-width: 1000px;
		margin: 0 auto;

		&:after
			content: "";
			display: block;
			clear: both;

		> a
			display: block;
			float: left;
			margin-right: 12px;

			> img
				display: block;
				height: 42px;

		#textarea
			display: block;
			float: left;
			position: relative;
			width: 400px;

			> i
				display: block;
				pointer-events: none;
				position: absolute;
				top: 1px;
				left: 1px;
				width: 42px;
				font-size: 0.9em;
				line-height: 40px;
				text-align: center;
				color: #888;

			#input
				display: block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				user-select: text;
				-moz-user-select: text;
				-webkit-user-select: text;
				-ms-user-select: text;
				cursor: auto;
				width: 100%;
				max-width: 500px;
				margin: 0;
				padding: 0 12px 0 36px;
				line-height: 40px;
				font-size: 0.9em;
				color: #666;
				font-weight: bold;
				background: #fff;
				border: 1px solid #d0d0d0;
				border-radius: 2px;
				outline: none;
				box-shadow: 0 0 0 114514px #fff inset;

				&:hover
					border-color: #c9c9c9;

				&:focus
					color: #444;
					border-color: #c0c0c0;

#result
	> header
		padding: 16px 0;
		border-bottom: solid 1px #eee;

		h1
			display: block;
			max-width: 1000px;
			margin: 0 auto;
			font-size: 1em;
			font-weight: normal;
			color: #66757f;

	> .ad
		max-width: 1000px;
		margin: 0 auto;
		padding: 16px 0 0 0;

	> .sss
		max-width: 1000px;
		margin: 0 auto;

		> .ss
			ss()

	> nav
		padding: 16px;
		text-align: center;
