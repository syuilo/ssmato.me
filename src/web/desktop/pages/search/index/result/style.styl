@import '../../../../../common'
@import '../../../../common/ss-preview'

html
	background: #fff;

body > header
	display: block;
	padding: 12px 16px;
	background: #f5f8fa;

	#search
		display: block;
		width: 100%;
		max-width: 1000px;
		margin: 0 auto;

		&:after
			content: "";
			display: block;
			clear: both;

		> a
			display: block;
			float: left;
			margin-right: 12px;

			> img
				display: block;
				height: 42px;

		#textarea
			display: block;
			float: left;
			position: relative;
			width: 400px;

			> i
				display: block;
				pointer-events: none;
				position: absolute;
				top: 1px;
				left: 1px;
				width: 42px;
				font-size: 0.9em;
				line-height: 40px;
				text-align: center;
				color: #888;

			#input
				display: block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				user-select: text;
				-moz-user-select: text;
				-webkit-user-select: text;
				-ms-user-select: text;
				cursor: auto;
				width: 100%;
				max-width: 500px;
				margin: 0;
				padding: 0 12px 0 36px;
				line-height: 40px;
				font-size: 0.9em;
				color: #666;
				font-weight: bold;
				background: #fff;
				border: 1px solid #dadada;
				border-radius: 2px;
				outline: none;
				box-shadow: 0 0 0 114514px #fff inset;

				&:hover
					border-color: #cdcdcd;

				&:focus
					color: #444;
					border-color: #c5c5c5;

#result
	> header
		padding: 16px 16px;
		border-bottom: solid 1px #eee;

		h1
			display: block;
			max-width: 1000px;
			margin: 0 auto;
			font-size: 1em;
			font-weight: normal;
			color: #66757f;

			> small
				margin-left: 8px;
				opacity: 0.5;
				font-size: 0.8em;

				&:before
					content: '(';

				&:after
					content: ')';

	> .ad
		max-width: 1000px;
		margin: 16px auto;
		padding: 0 16px;

		> ins
			display: block !important;

	> .sss
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 16px;

		> .ss
			ss()

	> nav
		margin: 16px;
		text-align: center;

		.more
			display: inline-block;
			-webkit-appearance: none;
			-moz-appearance: none;
			appearance: none;
			user-select: none;
			-moz-user-select: none;
			-webkit-user-select: none;
			-ms-user-select: none;
			cursor: pointer;
			margin: 0;
			padding: 12px 18px;
			font-size: 1em;
			line-height: 1em;
			color: #555;
			font-weight: bold;
			text-decoration: none;
			background: #fbfbfb;
			border: 1px solid #d0d0d0;
			border-radius: 3px;
			outline: none;
			box-shadow: 0 1px 1px rgba(255, 255, 255, 0.5) inset, 0 1px 1px rgba(0, 0, 0, 0.05);
			font-family: 'Proxima Nova Reg', "FOT-スーラ Pro M", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', sans-serif;
			transition: all 0.05s ease;

			&:hover
				background: #fff;
				box-shadow: 0 1px 1px rgba(0, 0, 0, 0.07);

			&:focus
				border-color: #c0c0c0;

			&:active
				box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset;

body > footer
	display: block;
	padding: 32px;
	text-align: center;
	background: #f5f8fa;

	small
		color: rgba(0, 0, 0, 0.5);

		a
			color: inherit;

		*
			margin: 0 2px;
