@import '../../../ui'
@import '../../../common/ss-preview'

html
	background: #fff;

#stack
	display: block;
	box-sizing: border-box;
	max-width: 700px;
	margin: 0 auto;
	border: solid 1px #ddd;
	border-radius: 4px;
	background: #fff;

	> header
		display: block;
		line-height: 42px;
		padding: 0 16px;
		background: #fbfbfb;
		border-bottom: solid 1px #ddd;
		border-radius: 4px 4px 0 0;

		h1
			display: block;
			margin: 0;
			padding: 0;
			font-size: 1em;
			font-weight: bold;
			color: #555;

			i
				margin-right: 5px;
				color: #aaa;

	> .body
		> .sss
			padding: 0 10px;

			> .ss
				ss()
