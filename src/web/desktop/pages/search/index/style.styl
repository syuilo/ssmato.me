@import '../../../ui'

html
	background: #fff;

main
	display: block;
	padding: 32px 16px 0 16px;

	> img
		display: block;
		pointer-events: none;
		margin: 0 auto;
		width: 100%;
		max-width: 300px;

	#search
		display: block;

		#textarea
			display: block;
			position: relative;
			width: 100%;
			max-width: 634px;
			margin: 0 auto;

			> i
				display: block;
				pointer-events: none;
				position: absolute;
				top: 1px;
				left: 1px;
				width: 46px;
				line-height: 46px;
				text-align: center;
				color: #888;

			#input
				display: block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				user-select: text;
				-moz-user-select: text;
				-webkit-user-select: text;
				-ms-user-select: text;
				cursor: auto;
				width: 100%;
				margin: 0;
				padding: 0 12px 0 40px;
				line-height: 46px;
				font-size: 1em;
				color: #555;
				font-weight: bold;
				background: #fff;
				border: 1px solid #d0d0d0;
				border-radius: 3px;
				outline: none;
				box-shadow: 0 0 0 114514px #fff inset;

				&:hover
					border-color: #c9c9c9;

				&:focus
					color: #333;
					border-color: #c0c0c0;

		#buttons
			text-align: center;

			button
				display: inline-block;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;
				user-select: none;
				-moz-user-select: none;
				-webkit-user-select: none;
				-ms-user-select: none;
				cursor: pointer;
				margin: 12px 6px;
				padding: 12px 18px;
				font-size: 1em;
				line-height: 1em;
				color: #555;
				font-weight: bold;
				background: #fbfbfb;
				border: 1px solid #d0d0d0;
				border-radius: 3px;
				outline: none;
				box-shadow: 0 1px 1px rgba(255, 255, 255, 0.5) inset, 0 1px 1px rgba(0, 0, 0, 0.05);
				font-family: 'Proxima Nova Reg', "FOT-スーラ Pro M", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', sans-serif;
				transition: all 0.05s ease;

				&:hover
					background: #fff;
					box-shadow: 0 1px 1px rgba(0, 0, 0, 0.07);

				&:focus
					border-color: #c0c0c0;

				&:active
					box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset;

	> .ad
		display: block;
		margin-top: 40px;
		text-align: center;
