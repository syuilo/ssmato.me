extend ../../ui
include ../../common/ss-preview

block title
	| SSまとめ

append meta
	- var summary = '「SSまとめ」はこの世にある全てのSSを収集するべく運営されているプロジェクトです';
	meta(name='keywords', content='SS, SSまとめ')
	meta(name='description', content= summary)
	meta(property='og:title', content='SSまとめ')
	meta(property='og:type', content='article')
	meta(property='og:description', content= summary)
	meta(property='og:url', content= config.url)
	meta(property='og:image', content= config.urls.resources + '/logo.jpg')
	meta(property='og:site_name', content='SSまとめ')
	meta(property='twitter:card', content='summary')
	meta(property='twitter:site', content='@syuilo')
	meta(property='twitter:title', content='SSまとめ')
	meta(property='twitter:description', content= summary)
	meta(property='twitter:image', content= config.urls.resources + '/logo.jpg')
	meta(property='twitter:url', content= config.url)

block content
	main(role='main')
		article
			header
				a#logo(href= config.url, role='banner')
					img(src= config.urls.resources + '/logo.png', alt='ss matome')
			
			section.recent
				div.sss
					each ss in recentSS
						+ss(ss)
