@import '../../../ui'

html
	background: #F7F7F7;

main
	display: block;
	padding: 24px 12px 0 12px;

	> img
		display: block;
		pointer-events: none;
		margin: 0 auto;
		width: 100%;
		max-width: 250px;

	#search
		display: block;

		#textarea
			display: block;
			position: relative;
			width: 100%;
			max-width: 634px;
			margin: 0 auto;

			> i
				display: block;
				pointer-events: none;
				position: absolute;
				top: 1px;
				left: 1px;
				width: 46px;
				line-height: 46px;
				text-align: center;
				color: #888;

			#input
				display: block;
				width: 100%;
				margin: 0;
				padding: 0 12px 0 40px;
				line-height: 46px;
				font-size: 1em;
				color: #555;
				font-weight: bold;
				background: #fff;
				border: 1px solid #d0d0d0;
				border-radius: 2px;
				outline: none;
				box-shadow: 0 0 0 114514px #fff inset;

				&:hover
					border-color: #c9c9c9;

				&:focus
					color: #333;
					border-color: #c0c0c0;
