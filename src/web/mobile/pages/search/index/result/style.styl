@import '../../../../ui'
@import '../../../../common/ss-preview'

#search
	display: block;
	padding: 12px;
	background: #F7F7F7;
	border-bottom: solid 1px #eee;

	#textarea
		display: block;
		position: relative;
		width: 100%;
		max-width: 1000px;
		margin: 0 auto;

		> i
			display: block;
			pointer-events: none;
			position: absolute;
			top: 1px;
			left: 1px;
			width: 46px;
			line-height: 46px;
			text-align: center;
			color: #888;

		#input
			display: block;
			width: 100%;
			max-width: 500px;
			margin: 0;
			padding: 0 12px 0 40px;
			line-height: 46px;
			font-size: 1em;
			color: #555;
			font-weight: bold;
			background: #fff;
			border: 1px solid #d0d0d0;
			border-radius: 2px;
			outline: none;
			box-shadow: 0 0 0 114514px #fff inset;

			&:hover
				border-color: #c9c9c9;

			&:focus
				color: #333;
				border-color: #c0c0c0;

#result
	> header
		padding: 16px 16px;
		border-bottom: solid 1px #eee;

		h1
			display: block;
			max-width: 1000px;
			margin: 0 auto;
			font-size: 1em;
			font-weight: normal;
			color: #66757f;

	> .sss
		max-width: 1000px;
		margin: 0 auto;

