ss()
	display: block;
	position: relative;
	margin: 16px;
	padding: 16px;
	background: #fff;
	box-shadow: 0 1px 2px rgba(0, 0, 0, 0.07);
	word-break: break-word;
	font-size: 1em;
	font-family: 'Proxima Nova Reg', "FOT-スーラ Pro M", 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', 'Meiryo', 'メイリオ', sans-serif;

	&:first-child
		margin-top: 0;

	&:last-child
		margin-bottom: 0;

	> header
		margin: 0 0 16px 0;

		> h1
			display: block;
			margin: 0;
			font-size: 1.2em;
			font-weight: bold;

			.posts
				opacity: 0.7;
				font-weight: normal;

		> .series
			display: inline;
			margin: 0 8px 0 0;
			font-size: 0.9em;

			> .caption
				display: inline;
				margin: 0;

			> .unknown
			> .title
				margin: 0 4px;

		> .characters
			display: inline;
			font-size: 0.9em;

			> .caption
				display: inline;
				margin: 0;

			ul
				display: inline;
				margin: 0;
				padding: 0;
				list-style: none;

				li
					display: inline;
					margin: 0 4px;

	> .body
		> .text
			display: block;
			position: relative;
			padding: 0 1em;
			min-height: 4em;
			max-height: 10em;
			overflow: hidden;
			color: #806358;

			&:after
				content: "";
				pointer-events: none;
				display: block;
				position: absolute;
				bottom: 0;
				width: 100%;
				height: 32px;
				background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,0) 1%, rgba(255,255,255,1) 100%);
				background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%,rgba(255,255,255,0) 1%,rgba(255,255,255,1) 100%);
				background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,0) 1%,rgba(255,255,255,1) 100%);

	> footer
		position: absolute;
		bottom: 16px;
		right: 16px;
		color: #bbb;

		> p
			display: inline;
			margin: 0 16px;

			.count
				font-size: 0.9em;

			i
				margin-right: 6px;


	@media (max-width: 500px)
		margin: 8px;
		padding: 8px;
		font-size: 0.8em;

		> footer
			bottom: 8px;
			right: 8px;
